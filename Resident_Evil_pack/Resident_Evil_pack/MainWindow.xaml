<Window x:Class="Resident_Evil_pack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="生化危机6导入" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBox IsEnabled="False" x:Name="xbox" Grid.Row="0"  />
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="选择码表路径" Padding="10" Margin="10" x:Name="tblBtn" Click="Button_Click_1" />
            <Button Content="选择原文件路径" Padding="10" Margin="10" x:Name="Button1" Click="Button_Click_1" />
            <Button Content="选择文本文件" Padding="10" Margin="10" x:Name="Button2" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
